<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="conejo.stanford.conejo.BuyScreen"
    android:orientation="vertical"
    android:gravity="center"
>

        <LinearLayout
            android:layout_height="0px"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#FFFFFF">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_black_icon"
                android:visibility="visible" />
            <TextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="Shop"
                android:textSize="30dp"
                android:textColor="#000000"
                android:paddingLeft="7dp"
                android:gravity="center|start"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:id="@+id/item_image"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:padding="5dp"
            android:src="@mipmap/shirt_1" />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:text="Shirt from Gap's Summer 2008 collection\n\n Conejo's Recommended size: M \n$41.99"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="20sp"/>

        <Button
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#1dae2e"
            android:textSize="25sp"
            android:text="Buy"
            android:background="@android:color/transparent"
            />

    </LinearLayout>




